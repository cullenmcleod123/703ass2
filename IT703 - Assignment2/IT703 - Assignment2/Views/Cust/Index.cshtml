@model IEnumerable<IT703___Assignment2.Models.Customermodel> 

@{
    ViewData["Title"] = "Customer List";
}

<h2>Customer List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Company ID</th>
            <th>Travel Agency ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address</td>
                <td>@customer.CompanyID</td>
                <td>@customer.TravelAgencyID</td>
            </tr>
        }
    </tbody>
</table>
